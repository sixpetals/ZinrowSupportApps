<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ボタンが押されてない時 -->
    <item android:state_pressed="false">
        <!-- ボタンの形状 -->
        <shape android:shape="rectangle">
            <!-- ボタンの色 -->
            <solid android:color="#840000"/>
            <!-- ボタンの枠線 -->
            <stroke android:width="2dp" android:color="#A40000"/>
            <!-- ボタンの角の半径 -->
            <corners android:radius="36dp"/>
            <!-- ボタン内の余白 -->
            <padding android:top="3dp" android:left="6dp" android:bottom="3dp" android:right="6dp"/>
        </shape>
    </item>
    <!-- ボタンが押された時 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2e0000"/>
            <stroke android:width="1dp" android:color="#fffdfdfd"/>
            <corners android:radius="4dp"/>
            <padding android:top="4dp" android:left="8dp" android:bottom="4dp" android:right="8dp"/>
        </shape>
    </item>
</selector>